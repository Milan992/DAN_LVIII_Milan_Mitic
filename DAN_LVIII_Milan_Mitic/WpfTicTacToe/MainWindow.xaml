                Margin="330,80,0,0" 
                VerticalAlignment="Top" Width="75"
                Click="Button_Click_Play"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="10,40,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn1_1"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="110,40,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn1_2"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="210,40,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn1_3"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="10,140,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn2_1"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="110,140,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn2_2"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="210,140,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn2_3"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="10,240,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn3_1"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="110,240,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn3_2"/>
        <Button Content="." HorizontalAlignment="Left"
                Margin="210,240,0,0" VerticalAlignment="Top"
                Width="100"
                Height="100"
                Name="btn3_3"/>
    </Grid>
</Window>
